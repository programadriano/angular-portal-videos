{
  "compileOnSave": false,
  "baseUrl": "./src",
  "paths": {
    "@datorama/services/*": ["app/services/*"],
    "@datorama/pipes/*": ["app/pipes/*"]
  },
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"]
  }
}
